.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "#{modal_name}Label", :id => modal_name, :tabindex => "-1"}
  .modal-dialog
    = simple_form_for Contact.new, local: true do |f|
      .modal-content
        .modal-header
          %h5.modal-title{:id => "#{modal_name}Label"} Sign Up For Emails
          %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
        .modal-body
          .card
            .card-body
              %p Our app isn't quite ready, yet! We want you to be the first to know when it is! Please fill out this form to receive emails from use with the lastest news for Teensy Bit.
              = f.error_notification
              = invisible_captcha
              = f.input :name
              = f.input :email
              = f.input :opt_in_emails, as: :hidden, input_html: { value: true }
              = f.input :source, as: :hidden, input_html: { value: source }
        .modal-footer
          %button.btn.btn-secondary{"data-bs-dismiss" => "modal", :type => "button"} Close
          = f.button :submit, "Submit", class: "btn-primary"
