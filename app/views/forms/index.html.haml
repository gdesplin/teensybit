.container
  .card.mt-3
    .card-header
      %h2.card-title Forms
    .card-body
      .row.row-cols-1.row-cols-lg-5.row-cols-md-3.row-cols-sm-2.g-4.mb-3
        - @forms.each do |form|
          .col
            .card
              .card-body
                %h5.card-title= form.title
                = link_to "View", [@daycare, form], class: "btn btn-primary text-light mt-3 me-2"
                = link_to "Edit", [:edit, @daycare, form], class: "btn btn-secondary text-light mt-3"
      != pagy_bootstrap_nav(@pagy)