%p#notice= notice
%h1 Stripe Prices
%table
  %thead
    %tr
      %th Stripe
      %th Active
      %th Currency
      %th Nickname
      %th Stripe recurring
      %th Kind
      %th Unit amount
      %th{:colspan => "3"}
  %tbody
    - @stripe_prices.each do |stripe_price|
      %tr
        %td= stripe_price.stripe_id
        %td= stripe_price.active
        %td= stripe_price.amount_currency
        %td= stripe_price.nickname
        %td= stripe_price.stripe_product_id
        %td= stripe_price.recurring
        %td= stripe_price.kind
        %td= stripe_price.amount
        %td= link_to 'Show', [@daycare, stripe_price]
        %td= link_to 'Destroy', [@daycare, stripe_price], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Stripe Price', new_daycare_stripe_price_path(@daycare)
